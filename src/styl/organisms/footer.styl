// Footer
// --------------------------------------------------


// Footer Inner
// --------------------------------------------------

.footer-inner
    block-base()
    background $gray
    color #fff 
    
    .container-flex 
        align-items center
        justify-content space-between
    
    p a 
        color $brand-primary
        

.footer-inner--main 
    font(p2)
    width $screen-full!important
    
    +above('sm')
        grid-space()
        lost-column 2/3 flex

    svg
        fill $brand-primary

    .right
        float right
        text-align right
     
    

.footer-inner--nav 
    reset(list) 
    
    +below('xs')
        lost-column 3/3 flex
        padding-top $space-md

    +above('sm')
        grid-space()
        lost-column 1/3 flex
        text-align right
    
    > li 
        display inline-block
        
        +below('xs')
            margin-right $space-md
        
        +above('sm')
            margin-left $space-md
    
    .btn-link
        color #fff
    

// Footer Hold
// --------------------------------------------------

.footer-hold 
    block-base()
    background $gray
    text-align center
    color $white
    
    p 
        font(p3, regular, primary, uppercase) 
  